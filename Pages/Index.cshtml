@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-4">Dashboard</h1>
    <div>
        <a asp-page="/Prescriptions/Create" class="btn btn-success me-2"><i class="bi bi-plus-circle-fill me-1"></i>New Prescription</a>
        @if (Model.ShowEditProfileButton)
        {
            <a asp-page="/DoctorProfile/Edit" class="btn btn-secondary"><i class="bi bi-person-gear me-1"></i>Edit Profile</a>
        }
    </div>
</div>


<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-center h-100">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-person-fill me-2"></i>Patients</h5>
                <p class="card-text display-6">@Model.PatientCount</p>
                <a asp-page="/Patients/Index" class="btn btn-outline-primary btn-sm">View Patients</a>
                <a asp-page="/Patients/Create" class="btn btn-primary btn-sm">Add Patient</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center h-100">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-capsule me-2"></i>Medications</h5>
                <p class="card-text display-6">@Model.MedicationCount</p>
                <a asp-page="/Medications/Index" class="btn btn-outline-primary btn-sm">View Medications</a>
                <a asp-page="/Medications/Create" class="btn btn-primary btn-sm">Add Medication</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center h-100">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-file-earmark-medical-fill me-2"></i>Prescriptions</h5>
                <p class="card-text display-6">@Model.PrescriptionCount</p>
                <a asp-page="/Prescriptions/Index" class="btn btn-outline-primary btn-sm">View Prescriptions</a>
                <a asp-page="/Prescriptions/Create" class="btn btn-primary btn-sm">New Prescription</a>
            </div>
        </div>
    </div>
</div>

